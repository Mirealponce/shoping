@model OnlineShoppingStore.DAL.Categoria

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item ">Categorías</li>
        <li class="breadcrumb-item active">Modificar Categoría</li>


    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Modificar Categoría

        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Categoria</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idCategoria)

                <div class="form-group">
                    <label class="control-label">Nombre de Categoria</label>

                    @Html.EditorFor(model => model.tipoCategoria, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tipoCategoria, "", new { @class = "text-danger" })

                </div>


                <input type="submit" value="Guardar" class="btn btn-success" />
                <a onclick="window.history.back();" class="btn btn-danger">Cancelar</a>

            </div>
            }
        </div>
    </div>
</div>



